<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.sbs.mp.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="dr.sbs.mp.entity.Article">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="intro" property="intro" />
        <result column="content" property="content" />
        <result column="front_user_id" property="frontUserId" />
        <result column="read_count" property="readCount" />
        <result column="support_count" property="supportCount" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, intro, content, front_user_id, read_count, support_count, status, create_time, update_time
    </sql>

</mapper>
